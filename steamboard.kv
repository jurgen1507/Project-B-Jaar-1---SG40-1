<SteamBoardNavBar>
    anim_type: 'slide_above_simple'
    id: main_win

    BoxLayout: # Unfolded Nav
        canvas:
            Color:
                rgba: (43/255, 71/255, 93/255, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        Button: #Menu
            background_color: (43/255, 71/255, 93/255, 0)
            canvas:
                Rectangle:
                    size: (225, 75)
                    pos: (self.pos[0]+self.size[0]/2.0) - 225/2.0, (self.pos[1]+self.size[1]/2.0) - 75/2.0
                    source: '.\icons\menu_unfolded.png'
            on_release: self.background_color = (0,0,0,0)
            on_press: self.background_color = (1,1,1,1)
            size_hint_y: None
            height: root.height/6
            on_release: main_win.toggle_state()
        Button: #Home
            background_color: (43/255, 71/255, 93/255, 0)
            canvas:
                Rectangle:
                    size: (225, 75)
                    pos: (self.pos[0]+self.size[0]/2.0) - 225/2.0, (self.pos[1]+self.size[1]/2.0) - 75/2.0
                    source: '.\icons\home_unfolded.png'
            on_release: self.background_color = (0,0,0,0)
            on_press: self.background_color = (1,1,1,1)
            size_hint_y: None
            height: root.height/6
            on_release: root.ids.Main_Window.pos = 80, 0
            on_release: root.ids.Games.pos = -100000, -100000
            on_release: main_win.toggle_state()
        Button: #Profiel

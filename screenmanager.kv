<LoginScreen>:
    error: ''
    EffectWidget:
        AsyncImage:
            color: 1, 1, 1, 0.8
            keep_ratio: False
            allow_stretch:True
            source: './icons/loginanime.gif'
            anim_delay: 0.065

    RelativeLayout:
        Widget:
            Label:
                pos: 200, 300
                font_name: './icons/Primetime.ttf'
                text:"Steam profile link"
                font_size: 30
                color: 0.7, 0.7, 0.7, 1
        TextInput:
            background_color: 0,0,0, .6

            id: login
            pos_hint: {'x': .05, 'y': .3}
            size: 450,32
            size_hint: None, None
            cursor_blink: True
            font_size: 16
            font_name: './icons/Arimo-Regular.ttf'
            multiline: False
            text: 'https://'
            foreground_color: 0.7, 0.7, 0.7, 1

        Label:
            pos: -50, -85
            font_name: './icons/Arimo-Regular.ttf'
            text: root.error
            color: 1,0,0,1
            font_size: 10

        Label:
            pos: 0, -175
            font_name: './icons/Arimo-Regular.ttf'
            text: 'Open your Steam client > Go to FRIENDS & CHAT > Open the profile you would like to track >\nRight click the profile page and select "Copy Page URL" > Paste into the text field'
            color: 0.7, 0.7, 0.7, 1
            font_size: 10


        Button:
            pos: 200, 75
            size: 100, 40
            size_hint: None, None
            text: 'SUBMIT'
            color: 0.7, 0.7, 0.7, 1
            font_name: './icons/Arimo-Regular.ttf'
            background_color: 0,0,0,0
            on_release: self.background_color = (0, 0, 0, 0)
